{
  "name": "e-culture",
  "version": "0.0.0",
  "description": "Educational website to learn about english culture",
  "private": false,
  "scripts": {
    "dev": "vite",
    "deploy": "run-p quality-check build && npx gh-pages -d dist",
    "build": "run-s rmdist && run-s build-only",
    "rmdist": "rm -rf dist/*",
    "build-only": "vite build",
    "quality-check": "run-p type-check lint stylelint",
    "type-check": "vue-tsc --noEmit",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "stylelint": "stylelint \"./src/**/*.{css,vue}\" --fix",
    "preview": "vite preview",
    "format": "prettier --write src/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/le-chartreux/e-culture.git"
  },
  "keywords": [
    "game",
    "english",
    "learn",
    "culture",
    "educational"
  ],
  "author": "le-chartreux",
  "license": "MIT",
  "homepage": "https://github.com/le-chartreux/e-culture#readme",
  "dependencies": {
    "firebase": "^9.21.0",
    "pure-rand": "^6.0.2",
    "vue": "^3.2.47",
    "vue-router": "^4.1.6"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.2.0",
    "@types/node": "^18.14.2",
    "@types/seedrandom": "^3.0.5",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vue/eslint-config-prettier": "^7.1.0",
    "@vue/eslint-config-typescript": "^11.0.2",
    "@vue/tsconfig": "^0.1.3",
    "eslint": "^8.34.0",
    "eslint-plugin-vue": "^9.9.0",
    "gh-pages": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "postcss-html": "^1.5.0",
    "prettier": "^2.8.4",
    "stylelint": "^15.6.0",
    "stylelint-config-recommended-vue": "^1.4.0",
    "stylelint-config-standard": "^33.0.0",
    "typescript": "~4.8.4",
    "vite": "^4.1.4",
    "vite-plugin-checker": "^0.5.6",
    "vue-tsc": "^1.4.4"
  }
}
